{
  "name": "cpu.ts",
  "version": "0.0.1",
  "description": "A Chip 8 emulator written in typescript.",
  "main": "build/index.js",
  "scripts": {
    "lint": "npm run lint:test && npm run lint:src",
    "lint:test": "eslint --ext .js,.jsx,.ts,.tsx src --color",
    "lint:src": "eslint --ext .js,.jsx,.ts,.tsx test --color",
    "createBuildDirectory": "mkdir -p build",
    "compileSrc": "tsc src/*.ts --outDir build",
    "build": "npm run createBuildDirectory && npm run compileSrc",
    "test": "jest src"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "eslint": "^7.0.0",
    "jest": "^26.0.1",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.3",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
